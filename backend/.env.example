# Required — must be set in every environment
DATABASE_URL=postgresql+psycopg2://USER:PASSWORD@HOST:5432/DB?sslmode=require
SECRET_KEY=replace-with-a-long-random-string-min-32-chars

# Optional — defaults shown
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
PORT=8000

# CORS — set to your actual frontend URL in production
CORS_ORIGINS=http://localhost:5173

# Email (optional — leave EMAIL_PROVIDER=mock to skip)
EMAIL_PROVIDER=mock
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_USE_SSL=true

# SMS (optional — leave SMS_PROVIDER=mock to skip)
SMS_PROVIDER=mock
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=
